{
  "name": "clean-api",
  "version": "1.0.0",
  "description": "NodeJs Rest API and GraphQL using TDD, Clean Architecture, Typescript and Design Patterns",
  "main": "index.js",
  "scripts": {
    "start": "sucrase-node src/main/server.ts",
    "check": "npm-check -s -u",
    "test": "jest --passWithNoTests --no-cache --runInBand --detectOpenHandles",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Gilberto Mossmann",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.6",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^18.14.2",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.12",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^4.7.4",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lint-staged": "^13.1.2",
    "mongodb-memory-server": "^8.11.5",
    "mongodb-memory-server-global": "^8.11.5",
    "sucrase": "^3.29.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "express": "^4.18.2",
    "fast-glob": "^3.2.12",
    "mongodb": "^5.1.0",
    "validator": "^13.9.0"
  }
}
